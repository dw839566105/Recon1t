.PHONY: all

path:=/mnt/stage/douwei/Simulation/1t_root/2MeV_015/
save:=result_pe
sim:=$(wildcard $(path)*.h5)
dst:=$(sim:$(path)%.h5=$(save)/%.h5)
all:$(dst)

$(save)/%.h5:$(path)%.h5
	mkdir -p $(save)
	python3 ReconByPE_h5.py $^ $@

# Delete partial files when the processes are killed.
.DELETE_ON_ERROR:
# Keep intermediate files around
.SECONDARY:
